<%= simple_form_for @artwork do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :name, label:false, placeholder: "Nom de votre oeuvre" %>
  <%= f.input :description, label:false, placeholder: "Décrivez-la !" %>
  <%= f.input :technique, label:false, placeholder: "Technique utilisée" %>
  <%= f.input :price, label:false, placeholder: "Prix/jour" %>
  <%= f.fields_for :artwork_attachments do |p| %>
       <%= p.file_field :picture, :multiple => true, name: "artwork_attachments[picture][]", label: 'ok' %>
   <% end %>
  <%= f.button :submit, class:"uk-button uk-button-default" %>
<% end %>
