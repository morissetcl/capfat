<%= simple_form_for @artwork do |f| %>
<div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.text_field :name, label: false, placeholder: "Nom de votre oeuvre" %>
  <%= f.text_field :description, label: false, placeholder: "Décrivez-la !" %>
  <%= f.text_field :technique, label: false, placeholder: "Technique utilisée" %>
  <%= f.text_field :price, label: false, placeholder: "Prix/jour" %>
</div>

<div>
  <p><strong>Photo:</strong></p>

  <div id="order_items">
    <%= f.simple_fields_for :artwork_attachments do |attachment| %>
      <%= render 'artwork_attachment_fields', f: attachment %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Ajouter une photo', f, :artwork_attachments %>
    </div>
  </div>
<div>
<%= f.submit %>
<% end %>
