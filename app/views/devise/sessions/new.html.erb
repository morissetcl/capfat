<h2>Log in</h2>
<form>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="uk-margin">
      <div class="uk-inline">
        <%= f.email_field :email, autofocus: true, class:"uk-input", type:"text" %>
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <%= f.password_field :password, autocomplete: "off", class:"uk-input"%>
      </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
    <div class="actions">
      <%= f.submit "Log in", class:"uk-button uk-button-default" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>

</form>
